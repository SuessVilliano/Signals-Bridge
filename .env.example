# ============================================
# Signal Bridge - Environment Configuration
# ============================================
# Copy this to .env and fill in your values

# --- Supabase ---
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=eyJhbGciOiJIUzI1NiIs...          # anon/public key
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIs...   # service_role key (server-side only)

# --- API Security ---
WEBHOOK_SECRET=your-webhook-signing-secret-here
API_KEY_SALT=random-salt-for-hashing-api-keys

# --- Price Feeds ---
# Crypto: Binance (no key needed for public WebSocket/REST)
BINANCE_REST_URL=https://api.binance.com/api/v3

# Forex: TwelveData (free tier = 800 req/day)
TWELVE_DATA_API_KEY=your-twelvedata-key

# Forex fallback: Alpha Vantage (free tier = 5 req/min)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key

# --- Price Monitoring ---
POLL_INTERVAL_CLOSE=5       # seconds, when price within 20% of TP/SL
POLL_INTERVAL_MID=15        # seconds, when price within 50%
POLL_INTERVAL_FAR=60        # seconds, when price is far away
PROXIMITY_CLOSE=0.002       # 0.2% of price distance
PROXIMITY_MID=0.005         # 0.5% of price distance

# --- Notifications ---
MAX_WEBHOOK_RETRIES=3
WEBHOOK_TIMEOUT_SECONDS=10

# --- App ---
LOG_LEVEL=INFO
APP_HOST=0.0.0.0
APP_PORT=8000
